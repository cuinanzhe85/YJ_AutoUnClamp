<Window x:Class="YJ_AutoUnClamp.Safety_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YJ_AutoUnClamp"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Name="Safety" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized">
    <Window.InputBindings>
        <KeyBinding Modifiers="Alt" Key="F4" Command="{Binding Path=PreventCloseCommand}" />
    </Window.InputBindings>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/SafetyView_Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Source="/Resources/Safety_Background.png"/>
        <!--Inner Grid-->
        <Grid Margin="50,48">
            <Grid.RowDefinitions>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="760*"/>
                <RowDefinition Height="122*"/>
            </Grid.RowDefinitions>
            <!--TItle-->
            <Grid Margin="10,10.5,10,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" BorderBrush="#FF5A36" Opacity="0.4" BorderThickness="0,0,0,1"/>
                <StackPanel Orientation="Horizontal">
                    <Image Grid.Row="1" Source="/Resources/warning.png" Width="40" Height="40" Margin="0,0,0,2"/>
                    <Label Content=" Caution" Foreground="#FF5A36" FontSize="40" FontWeight="Bold" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!--Buzzer-->
                    <telerik:RadButton Style="{StaticResource Safety_Buzzer_ButtonStyle}" Margin="10,0"
                                       Command="{Binding DioSetCommand}" CommandParameter="Buzzer">
                        <StackPanel Orientation="Horizontal">
                            <telerik:RadGlyph Glyph="&#xe207;" Style="{StaticResource SafetyView_Buzzer_ButtonIconStyle}"/>
                            <Label Content="Buzzer Off" Style="{StaticResource SafetyView_ButtonLabelStyle}"/>
                        </StackPanel>
                    </telerik:RadButton>
                    <!--Timer-->
                    <Border Style="{StaticResource SafetyView_TimerBorderStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="LightGray" ShadowDepth="1"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="{Binding Source={x:Static local:Global.instance},Path=Safety_NowTime}" Style="{StaticResource SafetyView_TimerLabelStyle}"/>
                            <Label Content="{Binding Source={x:Static local:Global.instance},Path=Safety_NowDate}" Style="{StaticResource SafetyView_TimerLabelStyle}" FontSize="14" FontWeight="Regular"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
            <!--Center-->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Opacity="0.85"/>
            <Border Grid.Row="1" Margin="10,0,10,0" BorderBrush="#FF5A36" BorderThickness="2" CornerRadius="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.25*"/>
                        <RowDefinition Height="0.65*"/>
                        <RowDefinition Height="0.10*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--Top Dio Right ( Not Use )-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <!--Top Dio Left ( Not Use -->
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <!--Top Dio Front-->
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <telerik:RadButton Content="SAFETY RESET (X09)" Style="{StaticResource Safety_Dio_ButtonStyle}"
                                           Foreground="{Binding Dio.DI_RAW_DATA[9], Converter={StaticResource AlarmForegroundColorConverter}}"
                                           Background="{Binding Dio.DI_RAW_DATA[9], Converter={StaticResource AlarmBackgroundColorConverter}}"
                                           Command="{Binding DioSetCommand}" CommandParameter="Reset"/>
                        <telerik:RadButton Grid.Column="1" Content="FRONT DOOR OPEN (X0A)" Style="{StaticResource Safety_Dio_ButtonStyle}"
                                           Foreground="{Binding Dio.DI_RAW_DATA[10], Converter={StaticResource AlarmForegroundColorConverter}}"
                                           Background="{Binding Dio.DI_RAW_DATA[10], Converter={StaticResource AlarmBackgroundColorConverter}}"/>
                        <telerik:RadButton Grid.Row="1" Content="FRONT OP EMERGENCY (X0F)" Style="{StaticResource Safety_Dio_ButtonStyle}"
                                           Foreground="{Binding Dio.DI_RAW_DATA[15], Converter={StaticResource AlarmForegroundColorConverter}}"
                                           Background="{Binding Dio.DI_RAW_DATA[15], Converter={StaticResource AlarmBackgroundColorConverter}}"/>
                    </Grid>
                    <!--Top Dio Back-->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <telerik:RadButton Content="REAR DOOR LEFT OPEN (X0B)" Style="{StaticResource Safety_Dio_ButtonStyle}"
                                           Foreground="{Binding Dio.DI_RAW_DATA[11], Converter={StaticResource AlarmForegroundColorConverter}}"
                                           Background="{Binding Dio.DI_RAW_DATA[11], Converter={StaticResource AlarmBackgroundColorConverter}}"/>
                        <telerik:RadButton Grid.Column="1" Content="REAR DOOR RIGHT OPEN (X0C)" Style="{StaticResource Safety_Dio_ButtonStyle}"
                                           Foreground="{Binding Dio.DI_RAW_DATA[12], Converter={StaticResource AlarmForegroundColorConverter}}"
                                           Background="{Binding Dio.DI_RAW_DATA[12], Converter={StaticResource AlarmBackgroundColorConverter}}"/>
                        <telerik:RadButton Grid.Row="1" Content="REAR OP EMERGENCY (X10)" Style="{StaticResource Safety_Dio_ButtonStyle}"
                                           Foreground="{Binding Dio.DI_RAW_DATA[15], Converter={StaticResource AlarmForegroundColorConverter}}"
                                           Background="{Binding Dio.DI_RAW_DATA[15], Converter={StaticResource AlarmBackgroundColorConverter}}"/>
                    </Grid>
                    
                    <!--Center Dio Right Image ( Not Use )-->
                    <Border Style="{StaticResource Eqp_BorderStyle}">
                        <Image Source="/Resources/Eqp_Right.png"/>
                    </Border>
                    <!--Center Dio Left Image ( Not Use )-->
                    <Border Grid.Column="3" Style="{StaticResource Eqp_BorderStyle}">
                        <Image Source="/Resources/Eqp_Left.png" Margin="-15,0,15,0"/>
                    </Border>
                    
                    <!--Center Dio Front Image-->
                    <Border Grid.Column="1" Style="{StaticResource Eqp_BorderStyle}">
                        <Grid>
                            <Image Source="/Resources/Eqp_Front.png"/>
                            <!--Front Door Open-->
                            <Border Width="180" Height="150" Margin="32,0,30,230" Style="{StaticResource Event_BorderStyle}"
                                    Visibility="{Binding Dio.DI_RAW_DATA[10], Converter={StaticResource BoolenVisibleReversConverter}}"/>
                            <!--Front Emergency-->
                            <Border Width="30" Height="30" Margin="0,0,120,350" Style="{StaticResource Event_BorderStyle}"
                                    Visibility="{Binding Dio.DI_RAW_DATA[15], Converter={StaticResource BoolenVisibleReversConverter}}"/>
                        </Grid>
                    </Border>
                    <!--Center Dio Back Image-->
                    <Border Grid.Column="2" Style="{StaticResource Eqp_BorderStyle}">
                        <Grid>
                            <Image Source="/Resources/Eqp_Back.png"/>
                            <!--Rear Left Door Open-->
                            <Border Width="90" Height="200" Margin="0,0,80,180" Style="{StaticResource Event_BorderStyle}"
                                    Visibility="{Binding Dio.DI_RAW_DATA[11], Converter={StaticResource BoolenVisibleReversConverter}}"/>
                            <!--Rear Right Door Open-->
                            <Border Width="90" Height="200" Margin="100,0,0,180" Style="{StaticResource Event_BorderStyle}"
                                    Visibility="{Binding Dio.DI_RAW_DATA[12], Converter={StaticResource BoolenVisibleReversConverter}}"/>
                            <!--Rear Emergency-->
                            <Border Width="30" Height="30" Margin="0,0,115,347" Style="{StaticResource Event_BorderStyle}"
                                    Visibility="{Binding Dio.DI_RAW_DATA[16], Converter={StaticResource BoolenVisibleReversConverter}}"/>
                        </Grid>
                    </Border>
                    
                    <!--Bottom Lable-->
                    <Label Content="Right" Style="{StaticResource Eqp_Bottom_LabelStyle}"/>
                    <Label Content="Front" Grid.Column="1" Style="{StaticResource Eqp_Bottom_LabelStyle}"/>
                    <Label Content="Back" Grid.Column="2" Style="{StaticResource Eqp_Bottom_LabelStyle}"/>
                    <Label Content="Left" Grid.Column="3" Style="{StaticResource Eqp_Bottom_LabelStyle}"/>
                </Grid>
            </Border>
            <!--Bottom-->
            <Grid Grid.Row="2" Margin="10,12,10,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1090*"/>
                    <ColumnDefinition Width="730*"/>
                </Grid.ColumnDefinitions>
                <Border Margin="0,0,10,0" Background="White" CornerRadius="8" Opacity="0.85"/>
                <Grid Margin="10">
                    <TextBlock FontWeight="Regular" Foreground="#252223" FontSize="16">
                <Run Text="Error Message" />
                    </TextBlock>
                    <TextBlock Text="{Binding Source={x:Static local:Global.instance},Path=LastErrorMessage}" FontWeight="Bold" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#F14B4D"/>
                </Grid>
                <Border Grid.Column="1" Margin="10,0,0,0" Background="White" CornerRadius="8" Opacity="0.85">
                    <!--IsEnabled="{Binding Dio.DI_RAW_DATA[9]}"-->
                    <telerik:RadButton Style="{StaticResource Safety_Unlock_ButtonStyle}" Command="{Binding Exit_ButtonCommand}">
                        <StackPanel Orientation="Horizontal">
                            <telerik:RadGlyph Glyph="&#xe114;" Style="{StaticResource SafetyView_Lock_ButtonIconStyle}"/>
                            <Label Content="Unlock" FontSize="20" Padding="0,10,0,0" Foreground="#262626" Style="{StaticResource SafetyView_ButtonLabelStyle}" />
                        </StackPanel>
                    </telerik:RadButton>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
