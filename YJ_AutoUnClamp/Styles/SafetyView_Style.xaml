<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    xmlns:helpers="clr-namespace:Telerik.Windows.Controls.Theming.Helpers;assembly=Telerik.Windows.Controls">
    <!--Safety Styles-->
    <FontFamily x:Key="CommonFont">/Fonts/#Roboto</FontFamily>
    <Style TargetType="telerik:RadButton" x:Key="Safety_Buzzer_ButtonStyle">
        <Setter Property="Width" Value="220"/>
        <Setter Property="Height" Value="44"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Background" Value="#393637"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontFamily" Value="{StaticResource CommonFont}"/>
        <Setter Property="helpers:ThemeHelper.MouseOverBrush" Value="Black"/>
        <Setter Property="telerik:StyleManager.Theme" Value="Material"/>
    </Style>
    <Style TargetType="telerik:RadButton" x:Key="Safety_Unlock_ButtonStyle">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="65"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Background" Value="#FFDE00"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
        <Setter Property="FontFamily" Value="{StaticResource CommonFont}"/>
        <Setter Property="helpers:ThemeHelper.MouseOverBrush" Value="Orange"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="telerik:StyleManager.Theme" Value="Material"/>
    </Style>
    <Style TargetType="telerik:RadButton" x:Key="Safety_Dio_ButtonStyle">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Background" Value="#E7E6E6"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontFamily" Value="{StaticResource CommonFont}"/>
        <Setter Property="telerik:StyleManager.Theme" Value="Material"/>
    </Style>
    <!--Timer Style-->
    <Style TargetType="Border" x:Key="SafetyView_TimerBorderStyle">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Width" Value="296"/>
        <Setter Property="Height" Value="44"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>
    <Style TargetType="Label" x:Key="SafetyView_TimerLabelStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="{StaticResource CommonFont}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="Label" x:Key="SafetyView_ButtonLabelStyle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="5,-2,0,0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="{StaticResource CommonFont}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style TargetType="telerik:RadGlyph" x:Key="SafetyView_Buzzer_ButtonIconStyle">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style TargetType="telerik:RadGlyph" x:Key="SafetyView_Lock_ButtonIconStyle">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <!--EQP Inner Style-->
    <Style TargetType="Border" x:Key="Event_BorderStyle">
        <Setter Property="Background" Value="#F14B4D"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Yellow"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>
    <Style TargetType="Border" x:Key="Eqp_BorderStyle">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="Background" Value="#E7E6E6"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
    </Style>
    <Style TargetType="Label" x:Key="Eqp_Bottom_LabelStyle">
        <Setter Property="Grid.Row" Value="2"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="{StaticResource CommonFont}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    <!--Password box-->
    <Style TargetType="telerik:RadPasswordBox" x:Key="SafetyView_PasswordBoxStyle">
        <Setter Property="Height" Value="44"/>
        <Setter Property="BorderBrush" Value="#6B5C62"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="WatermarkContent" Value="Password"/>
        <Setter Property="helpers:ThemeHelper.MouseOverBrush" Value="Transparent"/>
        <Setter Property="telerik:StyleManager.Theme" Value="Material"/>
    </Style>
</ResourceDictionary>